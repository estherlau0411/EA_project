{% extends 'base.html.j2' %}

{% block content %}
<head>
    <title>網上售票結算</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        h1 {
            text-align: center;
        }

        .ticket-details {
            margin: 20px auto;
            width: 400px;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .ticket-details p {
            margin: 10px 0;
        }

        .total-price {
            text-align: right;
            font-weight: bold;
            font-size: 18px;
        }

        .payment-button {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .payment-button a {
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 5px;
        }

        .payment-button a:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <h1>網上售票結算</h1>

    <div class="ticket-details">
        <h2>訂票詳情</h2>
        <p>電影名稱: 毒舌大狀</p>
        <p>放映時間: 2024-04-05 18:00</p>
        <p>座位號碼: D4, D5, D6</p>
        <p>票價: $100</p>
        <p>數量: 3</p>
        <hr>
        <p class="total-price">總價: $300</p>
    </div>

    <div class="payment-button">
        <a href="支付成功.html">立即付款</a>
    </div>
</body>
{% endblock %}