{% extends 'bootstrap/base.html' %}
{% block styles %}
    {{ super() }}
    <style>
          .logo-row {
              display: flex;
              align-items: center;
              margin-bottom: 20px;
          }
          .logo {
              width: 25%;
              margin-right: 20px;
          }
          .banner {
              width: 75%;
          }
    </style>
{% endblock %}
{% block navbar %}
    <nav class="navbar navbar-default" style="background-color: rgb(126, 119, 119); color: rgb(255, 255, 255); border-color: #e7e7e7; border-top: 3px solid red;"">
        <div class="container">
            <div class="navbar-header">
                <button type="button"
                        class="navbar-toggle collapsed"
                        data-toggle="collapse"
                        data-target="#bs-example-navbar-collapse-1"
                        aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="{{ url_for('explore') }}" style="color: white;">{{ _('Explore') }}</a>
                    </li>
                    <li>
                        <a href="{{ url_for('home') }}" style="color: white;">{{ _('book') }}</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    {% if current_user.is_anonymous %}
                        <li>
                            <a href="{{ url_for('login') }}" style="color: white;">{{ _('Login') }}</a>
                        </li>
                        <li>
                            <a href="{{ url_for('register') }}" style="color: white;">{{ _('Register') }}</a>
                        </li>
                    {% else %}
                        <li>
                            <a href="{{ url_for('user', username=current_user.username) }}" style="color: white;">{{ _('Profile') }}</a>
                        </li>
                        <li>
                            <a href="{{ url_for('logout') }}" style="color: white;">{{ _('Logout') }}</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}
{% block content %}
    <div class="container">
        {% with messages = get_flashed_messages() %}
            {% if messages %}
                {% for message in messages %}<div class="alert alert-info" role="alert">{{ message }}</div>{% endfor %}
            {% endif %}
        {% endwith %}
        {# application content needs to be provided in the app_content block #}
        <div class="logo-row">
            <a href="{{ url_for('index') }}">
                <img src="https://www.asia.ccb.com/hongkong_tc/personal/credit_cards/promotions/cinemas-offers/images/broadway-circuit-logo.jpg"
                     alt="Logo"
                     class="logo"
                     style="width: 200px">
            </a>
            <img src="https://mediafiles.cinema.com.hk/broadway/cmsimg/cinweb/webcms/images/MGK-728-x-90-GDN_26437d0fa5e23b.JPG"
                 alt="Banner"
                 class="banner"
                 style="flex-grow: 1;
                        text-align: right">
        </div>
        {% block app_content %}{% endblock %}
    </div>
{% endblock %}
{% block scripts %}
    {{ super() }}
    {{ moment.include_moment() }}
    {{ moment. lang(g. locale) }}
{% endblock %}
