    <script>
function togglePanel(panelId) {
    var ticketingPanel = document.getElementById('ticketing');
    var bookingPanel = document.getElementById('booking');
    
    if (panelId === 'ticketing') {
        ticketingPanel.style.display = 'block';
        bookingPanel.style.display = 'none';
    } else if (panelId === 'booking') {
        ticketingPanel.style.display = 'none';
        bookingPanel.style.display = 'block';
    }
}
